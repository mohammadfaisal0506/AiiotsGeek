# Optional: OpenAI API key. If present, system will use OpenAI embeddings + ChatCompletion.
OPENAI_API_KEY=

# If empty, system falls back to sentence-transformers for embeddings.
EMBEDDING_MODEL=openai:text-embedding-3-large

# Where to persist vector DB and metadata
DATA_DIR=./data

# Chunking settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# FAISS index filename
FAISS_INDEX_FILE=./data/faiss.index
METADATA_STORE_FILE=./data/metadata.pkl
